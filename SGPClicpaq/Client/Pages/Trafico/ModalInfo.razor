@if (oRespuesta != null)
{
    if (oRespuesta.List != null)
    {
        <h2>Información del viaje @id</h2>
        <RadzenCard Class="m-3">
            <div class="d-flex flex-row p-3">
                <div>
                    <RadzenText TextStyle="TextStyle.Overline" Class="d-flex mt-1 mb-0">Guías</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1"><b>@oRespuesta.List.Guias</b></RadzenText>
                    <RadzenText TextStyle="TextStyle.Overline" Class="d-flex mt-3 mb-0">Transporte</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1"><b>@oRespuesta.List.Transporte</b></RadzenText>
                    <RadzenText TextStyle="TextStyle.Overline" Class="d-flex mt-3 mb-0">Chofer</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1"><b>@oRespuesta.List.Chofer</b></RadzenText>
                    <RadzenText TextStyle="TextStyle.Overline" Class="d-flex mt-3 mb-0">Unidad</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1"><b>@oRespuesta.List.Unidad</b></RadzenText>
                    <RadzenText TextStyle="TextStyle.Overline" Class="d-flex mt-3 mb-0">Fecha del viaje</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1"><b>@oRespuesta.List.FechaViaje</b></RadzenText>
                    <RadzenText TextStyle="TextStyle.Overline" Class="d-flex mt-3 mb-0">Zona de destino</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1"><b>@oRespuesta.List.ZonaDestino</b></RadzenText>
                    <RadzenText TextStyle="TextStyle.Overline" Class="d-flex mt-3 mb-0">Observaciones</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1"><b>@oRespuesta.List.Observaciones</b></RadzenText>
                </div>
            </div>
        </RadzenCard>
    }
}

@code {
    [Parameter] public int id { get; set; }
    Respuesta<Viaje> oRespuesta = new();

    protected override async Task OnInitializedAsync()
    {
        oRespuesta = await http.GetFromJsonAsync<Respuesta<Viaje>>($"/api/Viaje/{id}");
    }
}
